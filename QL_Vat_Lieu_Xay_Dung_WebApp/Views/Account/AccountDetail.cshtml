@using QL_Vat_Lieu_Xay_Dung_WebApp.Extensions
@model AccountDetailViewModel
@{
    ViewData["Title"] = "Account Detail";
}
<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Account Detail</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->

<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-8 col-sm-12">
                    <div id="horizontal-form">
                        <form class="form-horizontal" enctype="multipart/form-data" method="post">
                            @if (ViewBag.CheckStatus == true && ViewBag.CheckStatus != null)
                            {
                                <div class="form-group">
                                    <div class="successmes">
                                        <div class="message-box-wrap"> <i class="fa fa-check-square fa-lg"></i> Cập Nhật Thành Công</div>
                                    </div>
                                </div>
                            }
                            else if (ViewBag.CheckStatus == false && ViewBag.CheckStatus != null)
                            {
                                <div class="form-group">
                                    <div class="errormes">
                                        <div class="message-box-wrap"> <i class="fa fa-exclamation-circle fa-lg"></i> Mật Khẩu Cũ Không Khớp Vs Mật Khẩu Trong Hệ Thống</div>
                                    </div>
                                </div>

                            }
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="form-group">

                                <label asp-for="UserName" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input readonly type="text" asp-for="UserName" name="username" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input readonly type="text" asp-for="Email" name="email" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">

                                <label asp-for="FullName" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="BirthDay" class="col-sm-2 control-label"></label>
                                <div class="col-md-10 input-text">
                                    <input type="date" onkeypress="return false" asp-for="BirthDay" name="birthDay" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Avatar" class="col-sm-2 control-label"></label>
                                <div class="col-md-10 input-text">
                                    <input type="file" asp-for="Avatar" name="avatar" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 col-md-12 col-xs-12 text-center">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="ckStatus">
                                            <span class="text">Thay đổi mật khẩu</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group passwordCheck">
                                <label asp-for="OldPassword" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input type="password" name="oldpassword" asp-for="OldPassword" class="form-control">
                                </div>
                            </div>

                            <div class="form-group passwordCheck">
                                <label asp-for="NewPassword" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input type="password" name="newPassword" asp-for="NewPassword" class="form-control">
                                </div>
                            </div>
                            <div class="form-group passwordCheck">
                                <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10 input-text">
                                    <input type="password" name="confirmPassword" asp-for="ConfirmPassword" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 col-md-12 col-xs-12 text-center submit-text">
                                    <button type="submit" class="button">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
    <script src="~/assets/client-app/client_controllers/user/user_index.js"></script>
    <script>
        var cachedObject = new userAjax();
        cachedObject.initialize();
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}