@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Register";
}
<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">@Localizer["Home"]</a><span>&raquo;</span></li>
                    <li><strong>@Localizer["Register"]</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="check-title">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>User Name:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="UserName" name="userName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Password:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="Password" name="password" class="form-control">
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    <label>Confirm Password:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Full Name:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Email:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="Email" name="email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>DOB:</label>
                                    <div class="input-text">
                                        <input type="date" onkeypress="return false" asp-for="BirthDay" name="birthDay" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Avatar:</label>
                                    <div class="input-text">
                                        <input type="file" asp-for="Avatar" name="avatar" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Phone Number:</label>
                                    <div class="input-text">
                                        <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-md-offset-2 col-md-10">
                                        <recaptcha />
                                        <span class="text-danger" id="recaptchaErrorMessage"></span>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="submit-text text-center">
                                        <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>@Localizer["Register"]</span></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}