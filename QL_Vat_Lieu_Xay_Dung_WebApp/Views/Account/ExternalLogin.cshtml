@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Associate your @ViewData["LoginProvider"] account.</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <p class="text-info">
                        You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                        Please enter an email address for this site below and click the Register button to finish
                        logging in.
                    </p>
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-action="ExternalLoginConfirmation" enctype="multipart/form-data" class="form-horizontal" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="col-md-3 col-sm-3 control-label"></label>
                                <div class="col-md-9 col-sm-9 input-text">
                                    <input readonly type="text" asp-for="Email" name="email" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="FullName" class="col-md-3 col-sm-3 control-label"></label>
                                <div class="col-md-9 col-sm-9 input-text">
                                    <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9 input-text">
                                    <input type="password" asp-for="Password" name="password" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-sm-3 control-label"></label>
                                <div class="col-sm-9 input-text">
                                    <input type="password" asp-for="ConfirmPassword" name="confirmpassword" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="DOB" class="col-md-3 col-sm-3 control-label"></label>
                                <div class="col-md-9 col-sm-9 input-text">
                                    <input type="date" onkeypress="return false" asp-for="DOB" name="dob" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Avatar" class="col-md-3 col-sm-3 control-label"></label>
                                <div class="col-md-9 col-sm-9 input-text">
                                    <input type="file" asp-for="Avatar" name="avatar" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="col-md-3 col-sm-3 control-label"></label>
                                <div class="col-md-9 col-sm-9 input-text">
                                    <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-9 submit-text text-center">
                                    <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />

}