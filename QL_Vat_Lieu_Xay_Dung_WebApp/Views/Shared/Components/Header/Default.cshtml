@using QL_Vat_Lieu_Xay_Dung_WebApp.Extensions
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model List<ProductCategoryViewModel>
@{
    var selectedItems = new List<SelectListItem>
{
        new SelectListItem()
        {
            Value = null,
            Text = "All Categories"
        }
    };
    selectedItems.AddRange(Model.Select(x => new SelectListItem()
    {
        Value = x.Id.ToString(),
        Text = x.Name
    }).ToList());
}
<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-xs-12">
                        <!-- Default Welcome Message -->
                        <div class="welcome-msg hidden-xs hidden-sm">@Localizer["Welcome"] @User.GetSpecificClaim("FullName")! </div>
                        <!-- Language &amp; Currency wrapper -->
                        @await Html.PartialAsync("_LanguagePartial")

                    </div>
                    <!-- top links -->
                    <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">
                        <span class="phone  hidden-xs hidden-sm">@Localizer["Call"]: +123.456.789</span>
                        <ul class="links">
                            <li><a title="Contact" href="/contact.html"><span>@Localizer["Contact"]</span></a></li>
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                                            @if (!string.IsNullOrEmpty(@User.GetSpecificClaim("Avatar")))
                                            {
                                                <img width="20" src="@User.GetSpecificClaim("Avatar")" alt="">
                                            }
                                            @User.GetSpecificClaim("FullName")
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/account-detail.html">@Localizer["Account"]</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>@Localizer["Logout"]</span></a>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a title="login" href="/login.html"><span>@Localizer["Login"]</span></a></li>
                                <li><a title="register" href="/register.html"><span>@Localizer["Register"]</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- header inner -->
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 jtv-logo-block">

                        <!-- Header Logo -->
                        <div class="logo"><a title="e-commerce" href="/"><img alt="ShopMart" title="ShopMart" src="~/assets/client/images/logo.png"></a> </div>
                    </div>
                    <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                        <!-- Search -->

                        <div class="top-search">
                            <div id="search">
                                <form method="get" action="/search.html">
                                    <div class="input-group">
                                        <select class="cate-dropdown hidden-xs hidden-sm" asp-items="selectedItems" name="categoryId"></select>
                                        <input type="text" class="form-control" placeholder="@Localizer["Search"]" name="keyword">
                                        <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- End Search -->
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3 top-cart">
                        <div class="link-wishlist"> <a href="#"> <i class="icon-heart icons"></i><span> @Localizer["Wishlist"]</span></a> </div>
                        <!-- top cart -->
                        <div class="top-cart-contain">
                            @await Component.InvokeAsync("HeaderCart")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>