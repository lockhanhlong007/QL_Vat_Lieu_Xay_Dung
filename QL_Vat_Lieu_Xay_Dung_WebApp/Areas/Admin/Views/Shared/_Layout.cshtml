@using QL_Vat_Lieu_Xay_Dung_WebApp.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Admin</title>

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />
    <!-- bootstrap-daterangepicker -->
    <link href="~/lib/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- Notify-->
    <link href="~/lib/notify/styles/metro/notify-metro.css" rel="stylesheet" />
    <!--Editor 4-->
    <link href="~/lib/ckeditor/skins/kama/editor.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/assets/admin/css/custom.css" rel="stylesheet" />
    <link href="~/assets/admin/css/StyleAdmin.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Admin/Home/Index" class="site_title"><i class="fa fa-paw"></i> <span>Gentelella Alela!</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">

                            <img src="~/assets/admin/images/img.jpg" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@User.GetSpecificClaim("FullName")</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />

                    <!-- sidebar menu -->
                    @await Component.InvokeAsync("SideBarViewComponents")
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="#">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav">
                        <ul class=" navbar-right">
                            <li class="nav-item dropdown open" style="padding-left: 15px;">
                                <partial name="_LoginPartial" />
                            </li>

                            <li role="presentation" class="nav-item dropdown open">
                                <a href="javascript:;" class="dropdown-toggle info-number" id="navbarDropdown1" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-envelope-o"></i>
                                    <span class="badge bg-green" id="totalAnnouncement">0</span>
                                </a>
                                <ul class="dropdown-menu list-unstyled msg_list" role="menu" id="announcementList" aria-labelledby="navbarDropdown1">
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <script id="announcement-template" type="x-tmpl-mustache">
        <li class="nav-item" data-id="{{Id}}">
            <a href="#" class="dropdown-item checkRead" ">
                <span class="image"><img src="{{Avatar}}" alt="Profile Image" /></span>
                <span>
                    <span>{{Title}}</span>
                    <span class="time">{{DateCreated}}</span>
                </span>
                <span class="message">
                    {{Content}}
                </span>
            </a>
        </li>
    </script>
    <script id="announcement-tag-template" type="x-tmpl-mustache">
        <li>
            <div class="text-center">
                <a>
                    <strong>See All Alerts</strong>
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </li>
    </script>

    <!--signalR-->
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <!-- FastClick -->
    <script src="~/lib/fastclick/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/lib/nprogress/nprogress.js"></script>
    <!--Mustache-->
    <script src="~/lib/mustache.js/mustache.js"></script>
    <!--Pagination-->
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.js"></script>
    <!-- jQuery Sparklines -->
    <script src="~/lib/gentelella/vendors/jquery-sparkline/dist/jquery.sparkline.min.js"></script>

    <!--Jquery validation-->
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validate/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validate/localization/messages_vi.js"></script>
    <!--CKEditor 4-->
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <!-- bootstrap-daterangepicker -->
    <script src="~/lib/moment.js/moment.js"></script>
    <script src="~/lib/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!--Notify js-->
    <script src="~/lib/notify/notify.js"></script>
    <script src="~/lib/notify/styles/metro/notify-metro.js"></script>
    <!-- Bootbox-->
    <script src="~/lib/bootbox.js/bootbox.js"></script>
    <!-- Custom Scripts-->
    <script src="~/assets/app/shared/customScript.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/assets/admin/js/custom.js"></script>
    <!--signalR-->
    <script src="~/assets/app/shared/signalR_admin.js" asp-append-version="true"></script>
    <script src="~/assets/app/shared/base.js" asp-append-version="true"></script>
    <script>
        var baseObj = new BaseAjax();
        baseObj.initialize();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>